{
  "scripts": {
    "build": "tailwindcss -i ./app/static/css/input.css -o ./app/static/css/output.css",
    "watch": "tailwindcss -i ./app/static/css/input.css -o ./app/static/css/output.css --watch",
    "fmt": "prettier --write ./app/**/*.{html,css}"
  },
  "devDependencies": {
    "prettier": "^3.4.1",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "tailwindcss": "^3.4.15"
  },
  "prettier": {
    "printWidth": 160,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": false,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "bracketSameLine": false,
    "arrowParens": "always",
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "tabWidth": 4
        }
      },
      {
        "files": "*.css",
        "options": {
          "tabWidth": 4
        }
      },
      {
        "files": "*.js",
        "options": {
          "tabWidth": 2
        }
      },
      {
        "files": "*.json",
        "options": {
          "tabWidth": 2
        }
      }
    ],
    "plugins": [
      "prettier-plugin-tailwindcss"
    ]
  }
}
